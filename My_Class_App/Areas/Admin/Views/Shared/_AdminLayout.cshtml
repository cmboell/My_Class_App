@{
    Layout = "_Layout";

    var current = ViewContext.RouteData.Values["controller"]?.ToString();
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<ul class="nav nav-tabs mt-2 mb-3">
    <li class="nav-item">
        <a asp-action="Index" asp-controller="Class"
           class="nav-link @Nav.Active("Class", current)">
            Manage Classes
        </a>
    </li>
    <li class="nav-item">
        <a asp-action="Index" asp-controller="Teacher"
           class="nav-link @Nav.Active("Teacher", current)">
            Manage Teachers
        </a>
    </li>
    <li class="nav-item">
        <a asp-action="Index" asp-controller="ClassType"
           class="nav-link @Nav.Active("ClassType", current)">
            Manage Class Types
        </a>
    </li>
    <li class="nav-item">
        <a asp-action="Index" asp-controller="User"
           class="nav-link @Nav.Active("User", current)">
            Manage Users
        </a>
    </li>
</ul>

@RenderBody()

