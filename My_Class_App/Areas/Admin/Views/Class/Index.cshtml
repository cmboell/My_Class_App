@model SearchViewModel
<!--admin view class index-->
@{
    ViewData["ClassTitle"] = " | Manage Classes";
}

<h1 class="mb-2">Manage Classes</h1>
<ul class="list-group">
    <li class="list-group-item">
        <h5 class="mt-1"><a asp-action="Add">Add a class</a></h5>
    </li>
    <li class="list-group-item">
        <form asp-action="Search" method="post" class="form-inline">
            <h5 class="mt-1 mr-5">Find a class</h5>
            <label>Search Term:</label>
            <input type="text" asp-for="SearchTerm" class="form-control ml-2 mr-2">
            <h5>Search By:</h5>
            <label class="radio-inline">
                <input type="radio" class="form-control ml-2 mr-2"
                       asp-for="Type" value="class1" checked>Class Title
            </label>
            <label class="radio-inline">
                <input type="radio" class="form-control ml-2 mr-2"
                       asp-for="Type" value="teacher">Teacher
            </label>
            <label class="radio-inline">
                <input type="radio" class="form-control ml-2 mr-2"
                       asp-for="Type" value="classtype">Class Type
            </label>
            <button type="submit" class="btn btn-dark ml-2 mr-2">Find</button><!--submit button-->
            <span asp-validation-for="SearchTerm" class="text-danger"></span>
        </form>
    </li>
</ul>