@model  SearchViewModel

@{
    ViewData["ClassTitle"] = " | Search Results";
}

<div class="row">
    <div class="col">
        <h1 class="mb-2">@Model.Header</h1>
    </div>
    <div class="col">
        <div class="float-right pr-2">
            <a asp-action="Index">New Search</a>
        </div>
    </div>
</div>

<table class="table">
    <tbody>
        @foreach (var class1 in Model.Classes) {
        <tr>
            <td>
                <a asp-action="Details" asp-controller="Class"
                   asp-area="" asp-route-id="@class1.ClassId"
                   asp-route-slug="@class1.ClassTitle.Slug()">@class1.ClassTitle</a>
            </td>
            <td>@class1.ClassType.Name</td>
            <td>
                @foreach(ClassTeacher ba in class1.ClassTeachers)
                {
                    <div>@ba.Teacher.FullName</div>
                }
            </td>
            <td>
                <div class="float-right">
                    <link-button><a asp-action="Edit" asp-route-id="@class1.ClassId" class="btn btn-dark">Edit</a></link-button>
                   <my-link-button> <a asp-action="Delete" asp-route-id="@class1.ClassId" class="btn btn-dark">Delete</a></my-link-button>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
