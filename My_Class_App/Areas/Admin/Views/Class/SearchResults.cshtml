@model  SearchViewModel

@{
    ViewData["ClassName"] = " | Search Results";
}

<div class="row">
    <div class="col">
        <h1 class="mb-2">@Model.Header</h1>
    </div>
    <div class="col">
        <div class="float-right pr-2">
            <a asp-action="Index">New Search</a>
        </div>
    </div>
</div>

<table class="table">
    <tbody>
        @foreach (var book in Model.Classes) {
        <tr>
            <td>
                <a asp-action="Details" asp-controller="Class"
                   asp-area="" asp-route-id="@book.ClassId"
                   asp-route-slug="@book.ClassName.Slug()">@book.ClassName</a>
            </td>
            <td>@book.ClassType.Name</td>
            <td>
                @foreach(ClassTeacher ba in book.ClassTeachers)
                {
                    <div>@ba.Teacher.FullName</div>
                }
            </td>
            <td>
                <div class="float-right">
                    <a asp-action="Edit" asp-route-id="@book.ClassId"
                       class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@book.ClassId"
                       class="btn btn-primary">Delete</a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
