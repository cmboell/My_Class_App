@model IEnumerable<ClassType>

@{
    ViewData["ClassTitle"] = " | Manage ClassTypes";
}

<h1 class="mb-2">Manage Class Types</h1>

<h5 class="mt-2"><a asp-action="Add" asp-area="Admin">Add a Class Type</a></h5>

<table class="table table-bordered table-striped table-sm">
    <thead>
        <tr><th>Class Type Id</th>
        <th>Name</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (ClassType classtype in Model)
        {
            <tr>
                <td>@classtype.ClassTypeId</td>
                <td>@classtype.Name</td>
                <td>
                    <a asp-action="ViewClasses" asp-area="Admin" asp-route-id="@classtype.ClassTypeId"
                        class="btn btn-primary">View Classes</a>
                    <a asp-action="Edit" asp-area="Admin" asp-route-id="@classtype.ClassTypeId"
                        class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-area="Admin" asp-route-id="@classtype.ClassTypeId"
                        class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



