@model ClassItem

@{
    ViewData["ClassTitle"] = " | Edit MyClass";
}

<h1>Edit MyClass Item</h1>
<form asp-action="Edit" method="post">
    <ul class="list-group mb-2">
        <li class="list-group-item">@Model.Class.ClassTitle</li>
        <li class="list-group-item">
            <div class="row">
                <div class="col-1">
                    <label>NumberOfCredits:</label>
                </div>
                <div class="col">
                    @Model.Class.NumberOfCredits.ToString("c")
                </div>
            </div>
        </li>
        <li class="list-group-item">
            <div class="form-row">
                <div class="col-1">
                    <label asp-for="Quantity">Quantity:</label>
                </div>
                <div class="col">
                    <select asp-for="Quantity" class="form-control">
                        @for (int i = 1; i <= 10; i++)
                        {
                            <option>@i</option>
                        }
                    </select>
                </div>
            </div>
        </li>
    </ul>
    <input type="hidden" asp-for="Class.ClassId" />
    <input type="hidden" asp-for="Class.ClassTitle" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-controller="MyClass" class="btn btn-primary">Cancel</a>
</form>
