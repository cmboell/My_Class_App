@model Schedule

@{
    ViewData["Title"] = $"{ViewBag.Operation} Schedule";
}

<h1 class="display-4">@ViewBag.Operation Schedule</h1>

<form asp-action="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Notes"></label>
        <input asp-for="Notes" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EventType"></label>
        <select asp-for="EventTypeId" class="form-control"
                asp-items="@(new SelectList(ViewBag.EventTypes,"EventTypeId","TypeOfEvent"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Day"></label>
        <select asp-for="DayId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Days,"DayId","Name"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="MilitaryTime"></label>
        <input asp-for="MilitaryTime" class="form-control" />
    </div>

    @if (ViewBag.Operation == "Edit")
    {
        <input type="hidden" asp-for="ScheduleId" />
    }


    <button type="submit">@ViewBag.Operation</button>
    <my-link-button action="Index" controller="Schedulehome">Cancel</my-link-button>
</form>